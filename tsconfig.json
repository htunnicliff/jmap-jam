{
  "compilerOptions": {
    "lib": ["ESNext", "DOM"],
    "module": "Node16",
    "target": "ES2018",
    "allowImportingTsExtensions": true,
    "moduleResolution": "Node16",
    "strict": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "dist",
    "declarationMap": true,
    "noUnusedLocals": true,
    "types": ["vitest/importMeta"]
  },
  "include": ["src/**/*"]
}
